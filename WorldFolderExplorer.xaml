<Window x:Class="ForgeServerRunner.WorldFolderExplorer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="World Explorer"
        Height="500"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- File and Folder List -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header for Current Path -->
        <Border Grid.Row="0" Background="#2D3748" Padding="10">
            <TextBlock x:Name="CurrentPathText"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="White"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- File and Folder List -->
        <Border Grid.Row="1" Background="White" BorderBrush="#CBD5E0" BorderThickness="1" Margin="10">
            <ListView x:Name="FolderContentsListView"
                      Margin="10"
                      SelectionMode="Single"
                      MouseDoubleClick="FolderContentsListView_MouseDoubleClick"
                      Background="#EDF2F7"
                      Foreground="Black"
                      FontFamily="Consolas"
                      FontSize="12">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="400"/>
                        <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#2D3748" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Rename"
                        Width="100"
                        Height="40"
                        Background="#3182CE"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="#2B6CB0"
                        Margin="5"
                        Click="RenameButton_Click"/>
                <Button Content="Delete"
                        Width="100"
                        Height="40"
                        Background="#E53E3E"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="#C53030"
                        Margin="5"
                        Click="DeleteButton_Click"/>
                <Button x:Name="BackButton"
                        Content="Quit"
                        Width="100"
                        Height="40"
                        Background="#718096"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="#4A5568"
                        Margin="5"
                        Click="BackButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
