<Window x:Class="ForgeServer_1._16._5__36._2._42_.ServerModBrowser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mod Manager"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- File List -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D3748" Padding="10">
            <TextBlock Text="Mod Manager"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- File List -->
        <Border Grid.Row="1" Background="White" BorderBrush="#CBD5E0" BorderThickness="1" Margin="10">
            <ListView x:Name="FileListView"
                      Margin="10"
                      SelectionMode="Single"
                      Background="#EDF2F7"
                      Foreground="Black"
                      FontFamily="Consolas"
                      FontSize="12">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Mod Name" DisplayMemberBinding="{Binding Name}" Width="400"/>
                        <GridViewColumn Header="Size (KB)" DisplayMemberBinding="{Binding Size}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#2D3748" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Rename"
                        Width="140"
                        Height="40"
                        Background="#48BB78"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="#38A169"
                        Margin="5"
                        Click="RenameButton_Click"/>
                <Button Content="Delete"
                        Width="140"
                        Height="40"
                        Background="#E53E3E"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="#C53030"
                        Margin="5"
                        Click="DeleteButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
